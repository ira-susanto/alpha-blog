<h1 class="text-center mt-4">Log In</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with scope: :session, url: login_path, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded" do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, placeholder: "Enter your password", class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center mt-3 text-info" %>
  </div>
</div>