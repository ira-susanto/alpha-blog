<div class="container">
  
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with model: @article, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded" do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, placeholder: "Title of article", class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, placeholder: "Description of article", rows: 10, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center mt-3 text-info" %>
  </div>
</div>